<aura:component controller="CampingListController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="items" type="Camping_Item__c[]"/>
    <aura:attribute name="er" type="boolean" default="false"/>
    <aura:attribute name="newItem" type="Camping_Item__c" default="{'sobjectType':'Camping_Item__c', 'Name': '', 'Price__c': 0,  'Quantity__c': 0, 'Packed__c': false }"/>
    <div aria-labelledby="newexpenseform" >
        <fieldset class="slds-box slds-theme_default slds-container_big">
            <legend id="newexpenseform" class="slds-text-heading_small  slds-p-vertical_medium">
                <span class="text">Add Expense</span>
            </legend>
            <form class="slds-form_stacked clr ">
    <ui:inputText value="{!v.newItem.Name}" aura:id="name" label="Name" class="slds-input slds-form-element__label text" labelClass="text"/>
    <ui:inputCurrency value="{!v.newItem.Price__c}"  aura:id="Price" label="Price" class="slds-input slds-form-element__label text" labelClass="text"/>
    <ui:inputNumber value="{!v.newItem.Quantity__c}" aura:id="Quantity" label="Quantity" class="slds-input slds-form-element__label text" labelClass="text"/>                    
    <br/>  <ui:inputCheckbox value="{!v.newItem.Packed__c}" aura:id="Packed"  label="Packed" labelClass="chkbox"/>
                <ui:button label="Create Camping" press="{!c.createItem}" aura:id="button" class="slds-m-top_medium text" labelClass="text"/><br/>
     
    <aura:iteration items="{!v.items}" var="PerItem">
        <c:campingListItem item="{!PerItem}" />
    </aura:iteration>
            </form>
        </fieldset>
    </div>
</aura:component>